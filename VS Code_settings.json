{
    "editor.fontSize": 18,
    "editor.tabSize": 2,
    "window.zoomLevel": 1,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "vue",
        "html",
        "typescript",
        "typescriptreact"
    ],
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "auto-close-tag.activationOnLanguage": [
        "xml",
        "php",
        "blade",
        "ejs",
        "jinja",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "plaintext",
        "markdown",
        "vue",
        "liquid",
        "erb",
        "lang-cfml",
        "cfml",
        "HTML (EEx)",
        "HTML (Eex)",
        "plist"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "editor.formatOnType": true,
    "editor.formatOnSave": true
}